{
  "parser": "babel-eslint",
  "extends": "airbnb",
  "plugins": [
    "react"
  ],
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true,
      "modules": true
    }
  },
  "rules": {
    "no-use-before-define": "off",
    "func-names": "off",
    "no-param-reassign": "off",
    "no-unused-expressions": "off",
    "eqeqeq": [2, "allow-null"]
  },
  "env": {
    "mocha": true,
    "node": true,
    "browser": true
  }
}
